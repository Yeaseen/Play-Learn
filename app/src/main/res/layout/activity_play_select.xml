<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.asus.autism_project.PlaySelect">

    <Button
        android:id="@+id/button3"
        android:layout_width="143dp"
        android:layout_height="48dp"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:background="@layout/mybutton"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="160dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="120dp"
        android:onClick="onClick"
        android:text="@string/letters"
        app:layout_constraintBottom_toTopOf="@+id/numBttn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/numBttn"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:background="@layout/mybutton"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="160dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="36dp"
        android:onClick="onClick"
        android:text="@string/numbers"
        app:layout_constraintBottom_toTopOf="@+id/mathBttn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/mathBttn"
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:background="@layout/mybutton"
        android:layout_marginBottom="38dp"
        android:layout_marginEnd="160dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="36dp"
        android:onClick="onClick"
        android:text="@string/math"
        app:layout_constraintBottom_toTopOf="@+id/picBttn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numBttn" />

    <Button
        android:id="@+id/picBttn"
        android:layout_width="169dp"
        android:layout_height="48dp"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:background="@layout/mybutton"
        android:layout_marginBottom="53dp"
        android:layout_marginEnd="160dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="38dp"
        android:onClick="onClick"
        android:text="@string/picture_puzzle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mathBttn" />
</android.support.constraint.ConstraintLayout>
